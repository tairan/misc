#!/bin/bash

VERSION=20150613

if [ ! -f `which rsync` ]
then
    echo "rsync not found"
    exit 1
fi

RSYNC_HOST="rsync://mirrors.yun-idc.com"
RSYNC_OPTIONS="--deleteÂ·--delay-updates --exclude \"isos\""

LOCAL="/srv/mirrors/centos/"
LOCK="/var/lock/centos-mirror.lock"

if [ -f "${LOCK}" ]; then
    echo "rsync already running"
    exit 0
fi

touch "${LOCK}"

rsync -avHPS $RYSNC_OPTIONS $RSYNC_HOST/centos/ $LOCAL

/bin/rm "${LOCK}"
